    <setting label="Exibir Menu Pesquisar" id="pesquisa" type="bool" default="false" />
    <setting label="Use Miniaturas como Fanart" id="use_thumb" type="bool" default="false" />
</category>
<category label="Apoio">
	<setting label="[COLOR lightblue]Suporte:[/COLOR]" type="lsep"/>
    <setting label="[COLOR aquamarine]One[/COLOR][COLOR white]Play[/COLOR]: Site" type="action" action="RunScript(plugin.video.OnePlay, supportsite)"/>
    <setting label="[COLOR aquamarine]One[/COLOR][COLOR white]Play[/COLOR]: Facebook" type="action" action="RunScript(plugin.video.OnePlay, supportfacebook)"/>
